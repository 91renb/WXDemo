/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.loading {
  margin: 40px auto;
  width: 80px;
  text-align: center;
}

.loading .loading-child {
  width: 20px;
  height: 20px;
  background-color: #3f91dd;
  border-radius: 100%;
  display: inline-block;
  -webkit-animation: loading 1.4s ease-in-out 0s infinite both;
  animation: loading 1.4s ease-in-out 0s infinite both;
}

.loading .anima-delay1 {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.loading .anima-delay2 {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes loading {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
    transform: scale(0);
  }

  40% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

@keyframes loading {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
    transform: scale(0);
  }

  40% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}